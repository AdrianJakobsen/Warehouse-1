import java.util.Random;
import java.util.Scanner;


public class beanMachine {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);

		System.out.println("Please enter the number of balls to play: ");
		int numberOfBalls = scanner.nextInt();
		System.out.println("Please enter the number of slots in the game:");
		int numberOfSlots = scanner.nextInt();
		printMyArray(allBallPathsInArrayForm(numberOfSlots, numberOfBalls), numberOfBalls, numberOfSlots);

		//printBallPlacment();
	}



	public static String[][] allBallPathsInArrayForm(int numberOfSlots, int numberOfBalls){
		Random rand = new Random();
		String ballPathInString = "";
		int ballPathInNumber = 0;
		String[][] pathOfBalls = new String[numberOfBalls][numberOfSlots];

		for(int row = 0; row<numberOfBalls; row++){
			for(int column = 0; column<numberOfSlots; column++){
				ballPathInNumber = rand.nextInt(2);
				if (ballPathInNumber == 1){
					ballPathInString = "L ";
					pathOfBalls[row][column] = ballPathInString;
				}
				else{
					ballPathInString = "R ";
					pathOfBalls[row][column] = ballPathInString;
				}
			}
		}
		return pathOfBalls;
	}

	public static void printMyArray(String[][] allBallPaths, int numberOfBalls, int numberOfSlots){
		for (int row = 0; row < numberOfBalls; row++) {
			for (int column = 0; column < numberOfSlots;column++) {
				System.out.print(allBallPaths[row][column] + " ");
			}
			System.out.println();
		}
	}
	private static int ballPlacment(String[][] allBallPathsInArrayForm, int numberOfBalls, int numberOfSlots) {
		int middleSlot = (int) numberOfSlots/2;
		for (int row = 0; row < numberOfBalls; row++) {
			for (int column = 0; column < numberOfSlots;column++) {	
				if(allBallPathsInArrayForm[row][column]=="L"){
					middleSlot--;
				}
				else{
					middleSlot++;
				}
			}
		}
		return middleSlot;
	}
	/*private static void printBallPlacment(int ballPlacment) {
		System.out.println("hello");
	
	}*/
}