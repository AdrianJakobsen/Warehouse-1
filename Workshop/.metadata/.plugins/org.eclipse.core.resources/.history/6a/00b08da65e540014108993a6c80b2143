import java.util.Random;
import java.util.Scanner;


public class beanMachine {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);

		System.out.println("Please enter the number of balls to play: ");
		int numberOfBalls = scanner.nextInt();
		System.out.println("Please enter the number of slots in the game:");
		int nubmberOfSlots = scanner.nextInt();
		ballPath(numberOfBalls);

		ballPlacment();
	}



	public static void ballPath(int numberOfSlots){
		Random rand = new Random();
		String ballPathInString = null;
		int ballPathInNumber = 0;

		for(int i = 0; i<=numberOfSlots; i++){
			ballPathInNumber = rand.nextInt(2)+1;
			if (ballPathInNumber == 1){
				ballPathInString = "L ";
				System.out.print(ballPathInString);
			}
			else{
				ballPathInString = "R ";
				System.out.print(ballPathInString);
			}
		}
	}
	private static void ballPlacment() {


	}
}
