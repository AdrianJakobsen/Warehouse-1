package objects;

public class Robot {
	String color;
	int length;
	int weigth;
	boolean isAlive;

	public Robot(){
		isAlive = true;
	}
	public Robot(String color){
		this.color = color;
		this.isAlive = true;
	}
	
	public void printStatus(){
		if(this.isAlive){
			System.out.println("Happines:)");
		}else{
		System.out.println("Death is a cruel person :");	
		}
	}
	
	public Robot(String color, int length, int weigth){
		this.color = color; 
		this.length = length;
		this.weigth = weigth;
	}
	public void kill(Robot robotToKill){
		isAlive = false;
		//robotToKill = null;
	}
}
