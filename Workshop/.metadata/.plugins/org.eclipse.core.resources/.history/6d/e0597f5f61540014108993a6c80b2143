import java.util.Random;
import java.util.Scanner;


public class beanMachine {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);

		System.out.println("Please enter the number of balls to play: ");
		int numberOfBalls = scanner.nextInt();
		System.out.println("Please enter the number of slots in the game:");
		int numberOfSlots = scanner.nextInt();
		ballPath(numberOfSlots,numberOfBalls);

		ballPlacment();
	}



	public static void ballPath(int numberOfSlots, int numberOfBalls){
		Random rand = new Random();
		String ballPathInString = "";
		int ballPathInNumber = 0;
		String [] pathOfBall = new String[numberOfSlots];

		for(int i = 0; i<numberOfSlots; i++){
			ballPathInNumber = rand.nextInt(2);
			if (ballPathInNumber == 1){
				ballPathInString = "L ";
				pathOfBall[i] =ballPathInString;
				System.out.println(pathOfBall);
			}
			else{
				ballPathInString = "R ";
				pathOfBall[i] =ballPathInString;
				System.out.println(pathOfBall);
			}
		}

	}
	private static void ballPlacment() {


	}
}
