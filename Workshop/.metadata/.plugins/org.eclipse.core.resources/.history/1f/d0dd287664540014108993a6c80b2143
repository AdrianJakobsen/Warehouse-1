import java.util.Random;
import java.util.Scanner;


public class beanMachine {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);

		System.out.println("Please enter the number of balls to play: ");
		int numberOfBalls = scanner.nextInt();
		System.out.println("Please enter the number of slots in the game:");
		int numberOfSlots = scanner.nextInt();
		allBallPaths(numberOfSlots, numberOfBalls);

		ballPlacment();
	}



	public static String[] allBallPaths(int numberOfSlots, int numberOfBalls){
		Random rand = new Random();
		String ballPathInString = "";
		int ballPathInNumber = 0;
		String[] pathOfBalls = new String[numberOfSlots];
		for(int i = 0; i<numberOfBalls; i++){
			System.out.println("");
			for(int j = 0; j<numberOfSlots; j++){
				ballPathInNumber = rand.nextInt(2);
				if (ballPathInNumber == 1){
					ballPathInString = "L ";
					pathOfBalls[i] = ballPathInString;
				}
				else{
					ballPathInString = "R ";
					pathOfBalls[i] = ballPathInString;
				}
			}
		}
		return pathOfBalls;
	}
	private static void ballPlacment() {
		

	}
}
