import java.util.Random;
import java.util.Scanner;


public class beanMachine {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);

		System.out.println("Please enter the number of balls to play: ");
		int numberOfBalls = scanner.nextInt();
		System.out.println("Please enter the number of slots in the game:");
		int numberOfSlots = scanner.nextInt();
		printArray(allBallPaths(numberOfSlots, numberOfSlots), numberOfBalls, numberOfSlots);

		ballPlacment();
	}

	public static String[][] allBallPaths(int numberOfSlots, int numberOfBalls){
		Random rand = new Random();
		String ballPathInString = "";
		int ballPathInNumber = 0;
		String[][] pathOfBalls = new String[numberOfBalls][numberOfSlots];
		for(int i = 0; i<numberOfBalls; i++){
			for(int j = 0; j<numberOfSlots; j++){
				ballPathInNumber = rand.nextInt(2);
				if (ballPathInNumber == 1){
					ballPathInString = "L ";
					pathOfBalls[i][j] = ballPathInString;
				}
				else{
					ballPathInString = "R ";
					pathOfBalls[i][j] = ballPathInString;
				}
			}
		}
		return pathOfBalls;
	}

	public static String printArray(String[][] allBallPaths, int numberOfBalls, int numberOfSlots){
		for (int row = 0; row < numberOfBalls; row++) {
			for (int column = 0; column < numberOfSlots;column++) {
				System.out.println(allBallPaths[row][column] + " ");
			}
		}
		return printArray(allBallPaths, numberOfBalls, numberOfSlots);
	}
	private static void ballPlacment() {


	}
}